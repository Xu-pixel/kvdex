{
  "lock": false,
  "tasks": {
    "check": "deno check mod.ts src/*.ts ext/*.ts tests/*.ts tests/**/*.ts benchmarks/**/*ts",
    "test": "deno test --unstable-kv",
    "bench": "deno bench --unstable-kv",
    "prep": "deno task check && deno fmt && deno lint && deno task test"
  },
  "fmt": {
    "semiColons": false
  },
  "lint": {
    "rules": {
      "exclude": ["no-explicit-any"]
    }
  },
  "test": {
    "include": ["./tests"]
  },
  "bench": {
    "include": ["./benchmarks"]
  }
}
